#: kivy 2.3.1


<ArchiveScreen>:
    name: 'archive'

    MDBoxLayout:
        orientation: 'vertical'

        MDBoxLayout:
            size_hint: 1, .1
            md_bg_color: root.manager.stale_blue
            padding: 20, 10
            spacing: 15

            MDIconButton:
                size_hint: .1, 1
                icon: 'arrow-left'
                md_bg_color: 1, 1, 1, 1
                line_width: 1.3
                line_color: 0, 0, 0, 1
                on_release: root.back()

            MonoLabel:
                size_hint: .8, 1
                id: breadcrumb

            MDIconButton:
                size_hint: .1, 1
                icon: 'refresh'
                md_bg_color: 1, 1, 1, 1
                line_width: 1.3
                line_color: 0, 0, 0, 1
                on_release: root.refresh()

        MDBoxLayout:
            size_hint: 1, .75
            md_bg_color: root.manager.stale_gray

            MDBoxLayout:
                id: data_table
                size_hint: .8, 1
                padding: 10

            MDBoxLayout:
                size_hint: .2, 1
                orientation: 'vertical'
                padding: 10, 60
                spacing: 10

                MDRectangleFlatIconButton:
                    id: new_folder_button
                    size_hint: 1, .25
                    text: 'New Folder'
                    icon: 'folder-plus'
                    font_size: 21
                    on_release: root.show_create_directory_dialog()

                MDRectangleFlatIconButton:
                    id: rename_button
                    size_hint: 1, .25
                    text: 'Rename'
                    icon: 'pencil'
                    font_size: 21
                    on_release: root.show_rename_dialog()

                MDRectangleFlatIconButton:
                    id: set_default_button
                    size_hint: 1, .25
                    text: 'Set Default'
                    icon: 'star'
                    font_size: 21
                    on_release: root.show_set_default_dialog()

                MDRectangleFlatIconButton:
                    id: delete_button
                    size_hint: 1, .25
                    text: 'Delete'
                    icon: 'delete'
                    font_size: 21
                    on_release: root.show_delete_dialog()

        MDBoxLayout:
            size_hint: 1, .15
            md_bg_color: root.manager.stale_blue
            padding: 15
            spacing: 20

            MDBoxLayout:
                size_hint: .33, 1
                orientation: 'vertical'

                MonoLabel:
                    id: date_label
                    text: "0000-00-00"
                    halign: 'center'

                MonoLabel:
                    id: time_label
                    text: "00:00:00"
                    halign: 'center'

            MDBoxLayout:
                size_hint: .33, 1
                spacing: 20

                MDRectangleFlatIconButton:
                    size_hint: 1, 1
                    text: 'Back'
                    icon: 'arrow-right'
                    on_release:
                        root.manager.current = 'home'
                        root.manager.transition.direction = 'left'

            MDBoxLayout:
                size_hint: .33, 1

                MonoLabel:
                    text: 'SIET1010'
                    halign: 'center'

