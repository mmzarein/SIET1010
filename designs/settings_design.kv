#: kivy 2.3.0


<GeneralSettingsScreen>:
    name: 'general_settings'

    MDBoxLayout:
        orientation: 'vertical'

        MDBoxLayout:
            size_hint: 1, .1
            md_bg_color: .23, .29, .36, 1
            padding: 20, 0

            MonoLabel:
                text: 'General Settings'

        MDBoxLayout:
            size_hint: 1, .75
            md_bg_color: .86, .86, .88, 1

            MDBoxLayout:
                orientation: 'vertical'
                size_hint: .8, 1

                MDBoxLayout:
                    size_hint: 1, .5

                    MDBoxLayout:
                        size_hint: .5, 1
                        orientation: 'vertical'
                        # padding: 15, 10, 15, 0

                        MDLabel:
                            text: 'Set Time'
                            size_hint: 1, None
                            height: 35
                            padding: 15, 0
                            md_bg_color: app.SKY_MIST
                            
                        MDBoxLayout:
                            orientation: 'vertical'
                            padding: 10

                            EntryBox:
                                id: hour
                                label: 'Hour ='
                                unit: ''
                                dialog_title: f'Hour'
                                lower_limit: 0
                                upper_limit: 23

                            EntryBox:
                                id: Minute
                                label: 'Minute ='
                                unit: ''
                                dialog_title: f'Minute'
                                lower_limit: 0
                                upper_limit: 59

                            EntryBox:
                                id: Second
                                label: 'Second ='
                                unit: ''
                                dialog_title: f'Second'
                                lower_limit: 0
                                upper_limit: 59

                    MDSeparator:
                        orientation: 'vertical'

                    MDBoxLayout:
                        size_hint: .5, 1
                        orientation: 'vertical'
                        # padding: 15, 10, 15, 0

                        MDLabel:
                            text: 'Set Date'
                            size_hint: 1, None
                            height: 35
                            padding: 15, 0
                            md_bg_color: app.SKY_MIST
                            
                        MDBoxLayout:
                            orientation: 'vertical'
                            padding: 10

                            EntryBox:
                                id: Year
                                label: 'Year ='
                                unit: ''
                                dialog_title: f'Year'
                                lower_limit: 2000
                                upper_limit: 3000

                            EntryBox:
                                id: Month
                                label: 'Month ='
                                unit: ''
                                dialog_title: f'Month'
                                lower_limit: 1
                                upper_limit: 12

                            EntryBox:
                                id: Day
                                label: 'Day ='
                                unit: ''
                                dialog_title: f'Day'
                                lower_limit: 1
                                upper_limit: 31


                MDSeparator

                MDBoxLayout:
                    size_hint: 1, .5
                    orientation: 'vertical'
                    padding: 15
                    spacing: 50

                    MDBoxLayout:
                        size_hint: 1, .2

                        MDLabel:
                            text: 'Filter Selection:'
                            font_style: 'H5'
                            size_hint: .8, 1
                            underline: True

                        PrimaryButton:
                            id: all_pass_btn
                            size_hint: .2, 1
                            text: 'All Pass'
                            on_release: root.all_pass()

                    MDBoxLayout:
                        id: frequencies_label
                        size_hint: .488, .8
                        orientation: 'vertical'
                        pos_hint: {'center_x': .5}

                        MDBoxLayout:
                            spacing: 10
                            MDLabel:
                                color: app.VOID_BLACK
                                text: 'High Frequency ='
                                halign: 'right'

                            LabelField:
                                id: high_freq_field

                            MDLabel:
                                size_hint: .2, 1
                                text: 'kHz'

                        MDBoxLayout:
                            MDBoxLayout:
                                spacing: 10
                                MDLabel:
                                    text: 'Low Frequency ='
                                    halign: 'right'

                                LabelField:
                                    id: low_freq_field

                                MDLabel:
                                    size_hint: .2, 1
                                    text: 'kHz'

            MDSeparator:
                orientation: 'vertical'

            MDBoxLayout:
                size_hint: .2, 1
                padding: 10

                PrimaryButton:
                    size_hint: 1, .15
                    text: 'Advanced'
                    icon: 'tune'
                    on_release:
                        app.root.current = 'advanced_settings'
                        root.manager.transition.direction = 'up'

        Panel:
            left_icon: 'arrow-up'
            left_label: 'Back'
            left_action: lambda: root.manager.back('down')
            right_icon: 'content-save-cog-outline'
            right_label: 'Save'
            right_action: root.save


<AdvancedSettingsScreen>:
    name: 'advanced_settings'

    MDBoxLayout:
        orientation: 'vertical'

        MDBoxLayout:
            size_hint: 1, .1
            md_bg_color: .23, .29, .36, 1
            padding: 20, 0

            MonoLabel:
                text: 'Advanced Settings'

        MDBoxLayout:
            size_hint: 1, .75
            md_bg_color: .86, .86, .88, 1

            MDBoxLayout:
                orientation: 'vertical'
                size_hint: .8, 1

                MDBoxLayout:
                    size_hint: 1, .35
                    padding: 15

                    MDCard:
                        orientation: 'vertical'
                        padding: 10

                        MonoLabel:
                            id: resolution_label
                            size_hint: 1, .5
                            color: app.VOID_BLACK

                        MDSlider:
                            id: resolution_slider
                            size_hint: 1, .3
                            hint: False
                            on_value: root.update_label('resolution', self.value)
                            min: .1
                            max: 10.0
                            step: .1


                        MDBoxLayout:
                            size_hint: 1, .2
                            MonoLabel:
                                text: 'Min: 0.1 Hz'
                                color: app.VOID_BLACK
                                halign: 'left'

                            MonoLabel:
                                text: 'Max: 10.0 Hz'
                                color: app.VOID_BLACK
                                halign: 'right'

                MDSeparator

                MDBoxLayout:
                    size_hint: 1, .35
                    padding: 15

                    MDCard:
                        orientation: 'vertical'
                        padding: 10

                        MonoLabel:
                            id: sensitivity_label
                            size_hint: 1, .6
                            color: app.VOID_BLACK

                        MDSlider:
                            id: sensitivity_slider
                            value: 2e6
                            size_hint: 1, .2
                            hint: False
                            on_value: root.update_label('sensitivity', self.value)
                            min: 1e6
                            max: 5e6
                            step: 1e5

                        MDBoxLayout:
                            size_hint: 1, .2
                            padding: 10, 0
                            MonoLabel:
                                text: 'Min: 1e6'
                                color: app.VOID_BLACK
                                halign: 'left'

                            MonoLabel:
                                text: 'Max: 5e6'
                                color: app.VOID_BLACK
                                halign: 'right'

                MDSeparator

                MDBoxLayout:
                    size_hint: 1, .30

            MDSeparator:
                orientation: 'vertical'

            MDBoxLayout:
                size_hint: .2, 1
                padding: 10

                PrimaryButton:
                    size_hint: 1, .15
                    text: 'Update'
                    icon: 'update'
                    on_release: root.update()

        Panel:
            left_icon: 'arrow-up'
            left_label: 'Back'
            left_action: root.back_to_general
            right_icon: 'content-save-cog-outline'
            right_label: 'Save'
            right_action: root.save

