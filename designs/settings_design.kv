#: kivy 2.3.0


<GeneralSettingsScreen>:
    name: 'general_settings'

    MDBoxLayout:
        orientation: 'vertical'

        MDBoxLayout:
            size_hint: 1, .1
            md_bg_color: .23, .29, .36, 1
            padding: 20, 0

            MonoLabel:
                text: 'General Settings'

        MDBoxLayout:
            size_hint: 1, .75
            md_bg_color: .86, .86, .88, 1

            MDBoxLayout:
                orientation: 'vertical'
                size_hint: .8, 1

                MDBoxLayout:
                    size_hint: 1, .4
                    orientation: 'vertical'

                    MDBoxLayout:
                        md_bg_color: app.SKY_MIST
                        size_hint: 1, .2
                        padding: 20, 0

                        MDLabel:
                            text: 'Set Date and Time'

                    MDLabel:
                        size_hint: 1, .8
                        text: 'This part is under extensive bug fixing. For now, enjoy the void!'
                        halign: 'center'


                MDSeparator

                MDBoxLayout:
                    size_hint: 1, .6
                    orientation: 'vertical'

                    MDBoxLayout:
                        md_bg_color: app.SKY_MIST
                        size_hint: 1, .2
                        padding: 20, 0

                        MDLabel:
                            text: 'Filter Selection'

                        PrimaryButton:
                            id: all_pass_btn
                            text: 'All Pass'
                            on_release: root.all_pass()
                            pos_hint: {'center_y': .5}

                    MDBoxLayout:
                        padding: 10
                        spacing: 10
                        size_hint: 1, .8
                        id: frequencies_label

                        MDCard:
                            orientation: 'vertical'
                            padding: 10

                            MonoLabel:
                                id: low_freq_label
                                size_hint: 1, .6
                                color: app.VOID_BLACK

                            MDSlider:
                                id: low_freq
                                on_value: root.update_label('low_freq_label', self.value)
                                size_hint: 1, .2
                                hint: False
                                min: 0
                                step: .01

                            MDBoxLayout:
                                size_hint: 1, .2
                                padding: 10, 0
                                MonoLabel:
                                    text: 'Min: 0 kHz'
                                    font_size: 20
                                    color: app.VOID_BLACK
                                    halign: 'left'

                                MonoLabel:
                                    id: low_freq_max
                                    font_size: 20
                                    color: app.VOID_BLACK
                                    halign: 'right'

                        MDCard:
                            orientation: 'vertical'
                            padding: 10

                            MonoLabel:
                                id: high_freq_label
                                size_hint: 1, .6
                                color: app.VOID_BLACK

                            MDSlider:
                                id: high_freq
                                on_value: root.update_label('high_freq_label', self.value)
                                size_hint: 1, .2
                                hint: False
                                max: 48
                                step: .1

                            MDBoxLayout:
                                size_hint: 1, .2
                                padding: 10, 0
                                MonoLabel:
                                    id: high_freq_min
                                    font_size: 20
                                    color: app.VOID_BLACK
                                    halign: 'left'

                                MonoLabel:
                                    text: 'Max: 48 kHz'
                                    font_size: 20
                                    color: app.VOID_BLACK
                                    halign: 'right'

            MDSeparator:
                orientation: 'vertical'

            MDBoxLayout:
                size_hint: .2, 1
                padding: 10

                PrimaryButton:
                    size_hint: 1, .15
                    text: 'Advanced'
                    icon: 'tune'
                    on_release:
                        app.root.current = 'advanced_settings'
                        root.manager.transition.direction = 'up'

        Panel:
            left_icon: 'arrow-up'
            left_label: 'Back'
            left_action: lambda: root.manager.back('down')
            right_icon: 'content-save-cog-outline'
            right_label: 'Save'
            right_action: root.save


<AdvancedSettingsScreen>:
    name: 'advanced_settings'

    MDBoxLayout:
        orientation: 'vertical'

        MDBoxLayout:
            size_hint: 1, .1
            md_bg_color: .23, .29, .36, 1
            padding: 20, 0

            MonoLabel:
                text: 'Advanced Settings'

        MDBoxLayout:
            size_hint: 1, .75
            md_bg_color: .86, .86, .88, 1

            MDBoxLayout:
                orientation: 'vertical'
                size_hint: .8, 1

                MDBoxLayout:
                    size_hint: 1, .5
                    padding: 15

                    MDCard:
                        orientation: 'vertical'
                        padding: 10

                        MonoLabel:
                            id: resolution_label
                            size_hint: 1, .6
                            color: app.VOID_BLACK

                        MDSlider:
                            id: resolution_slider
                            size_hint: 1, .2
                            hint: False
                            on_value: root.update_label('resolution', self.value)
                            min: .1
                            max: 10.0
                            step: .1

                        MDBoxLayout:
                            size_hint: 1, .2
                            padding: 10, 0
                            MonoLabel:
                                text: 'Min: 0.1 Hz'
                                color: app.VOID_BLACK
                                halign: 'left'

                            MonoLabel:
                                text: 'Max: 10.0 Hz'
                                color: app.VOID_BLACK
                                halign: 'right'

                MDSeparator

                MDBoxLayout:
                    size_hint: 1, .5
                    padding: 15

                    MDCard:
                        orientation: 'vertical'
                        padding: 10

                        MonoLabel:
                            id: sensitivity_label
                            size_hint: 1, .6
                            color: app.VOID_BLACK

                        MDSlider:
                            id: sensitivity_slider
                            value: 2e6
                            size_hint: 1, .2
                            hint: False
                            on_value: root.update_label('sensitivity', self.value)
                            min: 1e6
                            max: 5e6
                            step: 1e5

                        MDBoxLayout:
                            size_hint: 1, .2
                            padding: 10, 0
                            MonoLabel:
                                text: 'Min: 1e6'
                                color: app.VOID_BLACK
                                halign: 'left'

                            MonoLabel:
                                text: 'Max: 5e6'
                                color: app.VOID_BLACK
                                halign: 'right'
            MDSeparator:
                orientation: 'vertical'

            MDBoxLayout:
                size_hint: .2, 1
                padding: 10

                PrimaryButton:
                    size_hint: 1, .15
                    text: 'Update'
                    icon: 'update'
                    on_release: root.update()

        Panel:
            left_icon: 'arrow-up'
            left_label: 'Back'
            left_action: root.back_to_general
            right_icon: 'content-save-cog-outline'
            right_label: 'Save'
            right_action: root.save

