#: kivy 2.3.0


<GeneralSettingsScreen>:
    name: 'general_settings'

    MDBoxLayout:
        orientation: 'vertical'

        MDBoxLayout:
            size_hint: 1, .1
            md_bg_color: .23, .29, .36, 1
            padding: 20, 0

            MonoLabel:
                text: 'General Settings'

        MDBoxLayout:
            size_hint: 1, .75
            md_bg_color: .86, .86, .88, 1

            MDBoxLayout:
                orientation: 'vertical'
                size_hint: .8, 1

                MDBoxLayout:
                    size_hint: 1, .25

                    MDBoxLayout:
                        size_hint: .5, 1
                        orientation: 'vertical'
                        padding: 15, 10, 15, 0

                        MDBoxLayout:
                            size_hint: 1, .3

                            MDLabel:
                                text: 'Set Time:'
                                font_style: 'H5'
                                underline: True

                            MDIcon:
                                icon: 'clock-time-eight-outline'

                        MDBoxLayout:
                            size_hint: 1, .7
                            LabelField:
                                pos_hint: {'center_y': .44}
                                hint_text: 'Hour'
                            MonoLabel:
                                text: ':'
                                size_hint: .2, 1
                                font_size: 40
                                color: app.VOID_BLACK
                            LabelField:
                                hint_text: 'Minute'
                                pos_hint: {'center_y': .44}
                            MonoLabel:
                                text: ':'
                                size_hint: .2, 1
                                font_size: 40
                                color: app.VOID_BLACK
                            LabelField:
                                hint_text: 'Second'
                                pos_hint: {'center_y': .44}

                    MDSeparator:
                        orientation: 'vertical'

                    MDBoxLayout:
                        size_hint: .5, 1
                        orientation: 'vertical'
                        padding: 15, 10, 15, 0

                        MDBoxLayout:
                            size_hint: 1, .3
                            MDLabel:
                                text: 'Set Date:'
                                font_style: 'H5'
                                underline: True
                            MDIcon:
                                icon: 'calendar-month-outline'

                        MDBoxLayout:
                            size_hint: 1, .7
                            LabelField:
                                hint_text: 'Year'
                                pos_hint: {'center_y': .44}
                            MonoLabel:
                                text: '/'
                                size_hint: .2, 1
                                font_size: 40
                                color: app.VOID_BLACK
                            LabelField:
                                hint_text: 'Month'
                                pos_hint: {'center_y': .44}
                            MonoLabel:
                                text: '/'
                                size_hint: .2, 1
                                font_size: 40
                                color: app.VOID_BLACK
                            LabelField:
                                hint_text: 'Day'
                                pos_hint: {'center_y': .44}

                MDSeparator

                MDBoxLayout:
                    size_hint: 1, .5
                    orientation: 'vertical'
                    padding: 15
                    spacing: 50

                    MDBoxLayout:
                        size_hint: 1, .3

                        MDLabel:
                            text: 'Filter Selection:'
                            font_style: 'H5'
                            size_hint: .8, 1
                            underline: True

                        PrimaryButton:
                            id: all_pass_btn
                            size_hint: .2, 1
                            text: 'All Pass'
                            on_release: root.all_pass()

                    MDBoxLayout:
                        id: frequencies_label
                        size_hint: .488, .7
                        orientation: 'vertical'
                        pos_hint: {'center_x': .5}

                        MDBoxLayout:
                            spacing: 10
                            MDLabel:
                                color: app.VOID_BLACK
                                text: 'High Frequency ='
                                halign: 'right'

                            LabelField:
                                id: high_freq_field

                            MDLabel:
                                size_hint: .2, 1
                                text: 'kHz'

                        MDBoxLayout:
                            MDBoxLayout:
                                spacing: 10
                                MDLabel:
                                    text: 'Low Frequency ='
                                    halign: 'right'

                                LabelField:
                                    id: low_freq_field

                                MDLabel:
                                    size_hint: .2, 1
                                    text: 'kHz'

                MDSeparator

                MDBoxLayout:
                    size_hint: 1, .25
                    padding: 15

                    MDLabel:
                        size_hint: .2, 1
                        text: 'Brightness:'
                        font_style: 'H5'
                        underline: True

                    MDSlider:
                        size_hint: .8, 1
                        value: 70
                        color: app.STALE_BLUE
                        thumb_color_active: app.STALE_BLUE
                        thumb_color_inactive: app.STALE_BLUE
                        hint_bg_color: app.VOID_BLACK
                        hint_text_color: app.PURE_LIGHT

            MDSeparator:
                orientation: 'vertical'

            MDBoxLayout:
                size_hint: .2, 1
                padding: 10

                PrimaryButton:
                    size_hint: 1, .15
                    text: 'Advanced'
                    icon: 'tune'
                    on_release:
                        app.root.current = 'advanced_settings'
                        root.manager.transition.direction = 'up'

        Panel:
            left_icon: 'arrow-up'
            left_label: 'Back'
            left_action: lambda: root.manager.back('down')
            right_icon: 'content-save-cog-outline'
            right_label: 'Save'
            right_action: root.save


<AdvancedSettingsScreen>:
    name: 'advanced_settings'

    MDBoxLayout:
        orientation: 'vertical'

        MDBoxLayout:
            size_hint: 1, .1
            md_bg_color: .23, .29, .36, 1
            padding: 20, 0

            MonoLabel:
                text: 'Advanced Settings'

        MDBoxLayout:
            size_hint: 1, .75
            md_bg_color: .86, .86, .88, 1

            MDBoxLayout:
                orientation: 'vertical'
                size_hint: .8, 1

                MDBoxLayout:
                    size_hint: 1, .35
                    padding: 15

                    MDCard:
                        orientation: 'vertical'
                        padding: 10

                        MonoLabel:
                            id: resolution_label
                            size_hint: 1, .5
                            color: app.VOID_BLACK

                        MDSlider:
                            id: resolution_slider
                            size_hint: 1, .3
                            hint: False
                            on_value: root.update_label('resolution', self.value)
                            min: .1
                            max: 10.0
                            step: .1


                        MDBoxLayout:
                            size_hint: 1, .2
                            MonoLabel:
                                text: 'Min: 0.1 Hz'
                                color: app.VOID_BLACK
                                halign: 'left'

                            MonoLabel:
                                text: 'Max: 10.0 Hz'
                                color: app.VOID_BLACK
                                halign: 'right'

                MDSeparator

                MDBoxLayout:
                    size_hint: 1, .35
                    padding: 15

                    MDCard:
                        orientation: 'vertical'
                        padding: 10

                        MonoLabel:
                            id: sensitivity_label
                            size_hint: 1, .6
                            color: app.VOID_BLACK

                        MDSlider:
                            id: sensitivity_slider
                            value: 20
                            size_hint: 1, .2
                            hint: False
                            on_value: root.update_label('sensitivity', self.value)

                        MDBoxLayout:
                            size_hint: 1, .2
                            padding: 10, 0
                            MonoLabel:
                                text: 'Min'
                                color: app.VOID_BLACK
                                halign: 'left'

                            MonoLabel:
                                text: 'Max'
                                color: app.VOID_BLACK
                                halign: 'right'

                MDSeparator

                MDBoxLayout:
                    size_hint: 1, .30

            MDSeparator:
                orientation: 'vertical'

            MDBoxLayout:
                size_hint: .2, 1
                padding: 10

                PrimaryButton:
                    size_hint: 1, .15
                    text: 'Update'
                    icon: 'update'
                    disabled: True

        Panel:
            left_icon: 'arrow-up'
            left_label: 'Back'
            left_action: root.back_to_general
            right_icon: 'content-save-cog-outline'
            right_label: 'Save'
            right_action: root.save

