<MonoLabel@MDLabel>:
    font_name: 'fonts/RobotoMono-Regular.ttf'
    font_size: 27
    halign: 'center'
    color: app.PURE_LIGHT


<PrimaryButton@MDRectangleFlatIconButton>:
    md_bg_color: app.PURE_LIGHT
    text_color: app.VOID_BLACK
    line_color: app.VOID_BLACK
    icon_color: app.VOID_BLACK
    font_size: 27
    line_width: 1.3


<IconButton@MDFloatingActionButton>:
    type: 'large'
    elevation: 0
    md_bg_color: app.PURE_LIGHT
    line_color: app.VOID_BLACK
    icon_color: app.VOID_BLACK
    line_width: 1.5


<ChoiceButton>:
    size_hint: 1, 1
    font_size: 23
    pos_hint: {'center_y': .5}
    icon: 'square-small'
    md_bg_color: app.PURE_LIGHT
    icon_color: app.VOID_BLACK
    text_color: app.VOID_BLACK
    font_color_normal: app.VOID_BLACK
    background_normal: app.PURE_LIGHT
    background_down: app.STALE_BLUE
    font_color_down: app.PURE_LIGHT
    line_color: app.VOID_BLACK
    line_width: 1.1


<PromptContent>:
    size_hint_y: None
    height: 69

    MDTextField:
        id: text_field
        pos_hint: {'center_y': .6, 'center_x': .5}
        helper_text_mode: 'persistent'
        helper_text_color_normal: 'red'
        helper_text_color_focus: 'red'


<MDTextField>:
    mode: 'round'
    line_color_normal: app.STALE_BLUE
    line_color_focus: app.VOID_BLACK
    text_color_normal: app.STALE_BLUE
    text_color_focus: app.VOID_BLACK
    hint_text_color_normal: (0.30, 0.30, 0.35, .8)
    font_name_hint_text: 'fonts/RobotoMono-Regular.ttf'
    pos_hint: {'center_x': .5, 'center_y': .5}
    font_size: 25


<EntryBox>:
    MDBoxLayout:
        spacing: 10

        MDLabel:
            text: root.label
            size_hint: .6, 1
            pos_hint: {'center_y': .5, 'center_x': .5}
            halign: 'right'

        LabelField:
            dialog_title: root.dialog_title
            id: label_field
            size_hint: .3, None
            mode: 'round'
            pos_hint: {'center_y': .5, 'center_x': .5}
            is_output: root.is_output
            upper_limit: root.upper_limit
            lower_limit: root.lower_limit

        MDLabel:
            text: root.unit
            size_hint: .1, 1
            pos_hint: {'center_y': .5, 'center_x': .5}
            halign: 'left'


<MDSlider>:
    color: app.STALE_BLUE
    thumb_color_active: app.STALE_BLUE
    thumb_color_inactive: app.STALE_BLUE
    hint_bg_color: app.VOID_BLACK
    hint_text_color: app.PURE_LIGHT


<Panel>:
    size_hint: 1, .15
    md_bg_color: app.STALE_BLUE
    padding: 15
    spacing: 20

    MDBoxLayout:
        size_hint: .25, 1
        orientation: 'vertical'

        MonoLabel:
            id: time_label
            text: '00:00:00'

        MonoLabel:
            id: date_label
            text: '0000-00-00'

    MDBoxLayout:
        size_hint: .5, 1
        spacing: 20

        PrimaryButton:
            size_hint: 1, 1
            icon: root.left_icon
            text: root.left_label
            on_release: root.left_action()

        PrimaryButton:
            id: right_button
            size_hint: 1, 1
            icon: root.right_icon
            text: root.right_label
            on_release: root.right_action()

    MDBoxLayout:
        size_hint: .25, 1
        MonoLabel:
            text: 'SIET1010'
            halign: 'center'


<Navigator>:
    HomeScreen
    WaveScreen
    FFTScreen
    ArchiveScreen
    ModulusScreen
    GeneralSettingsScreen
    AdvancedSettingsScreen

